<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blood Bank System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Montserrat:wght@400;700&family=Roboto:wght@400;700&family=Merriweather:wght@400;700&family=Lobster&family=Pacifico&display=swap" rel="stylesheet">

    <!-- ✅ Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/site.css"/>
    <link rel="stylesheet" href="~/BloodBankManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark bg-danger shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold mx-3" asp-controller="Dashboard" asp-action="Index">
                    <span class="bg-light rounded-circle me-1"><i id="dropIcon" class="bi bi-droplet-fill text-center p-1"></i></span>
                    Blood Bank System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-light fw-semibold" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-light fw-semibold" asp-controller="Donor" asp-action="Index">Make Donors</a></li>
                        <li class="nav-item"><a class="nav-link text-light fw-semibold" asp-controller="BloodRequest" asp-action="Index">BloodRequests</a></li>
                        <li class="nav-item"><a class="nav-link text-light fw-semibold" asp-controller="BloodInventory" asp-action="Index">Blood Stock</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light fw-semibold" data-bs-toggle="dropdown" href="#" aria-expanded="false">About us</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "DoctorInformations")">Doctor Info</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "EmployeeInformations")">Employee Info</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Patient")">Patient Info</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Billing")">Bill Details</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm fw-semibold ms-3 mt-1" href="@Url.Action("Logout", "Dashboard")">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
       @RenderBody()
    </main>

    <footer id="mainFooter" class="py-3" style="background-color:#FAFAFA; border-top:1px solid #e0e0e0;">
        <div class="container text-center">
            <span style="font-family: 'Merriweather', serif; color:#555; font-size: 14px;">
                &copy; @DateTime.Now.Year Blood Bank System — Developed by Vinayak Velhal
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        // Hide navbar if this page is loaded inside an iframe (hospital/patient modal)
        if (window.self !== window.top) {
            const navbar = document.getElementById("mainNavbar");
            if (navbar) navbar.style.display = "none";

            const footer = document.getElementById("mainFooter");
            if (footer) footer.style.display = "none";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
