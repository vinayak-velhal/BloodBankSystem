@model BloodBankManagementSystem.Models.PatientRecord
@{
    ViewData["Title"] = "Add New Patient";
}

<div class="container mt-1 mb-1">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4" style="height: 61.8px;">
                    <h4 class="mb-0"><img src="~/icons/Patient.png" alt="Patient Icon" class="me-1 mb-1" style="width: 32px; height: 32px" /> Add New Patient</h4>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Create" method="post" id="patientForm">
                        @Html.AntiForgeryToken()
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="PatientName" class="form-label fw-semibold">Patient Name</label>
                                <input asp-for="PatientName" class="form-control shadow-sm" placeholder="Enter patient name" />
                                <span asp-validation-for="PatientName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BloodGroup" class="form-label fw-semibold">Blood Group</label>
                                <select asp-for="BloodGroup" asp-items="(SelectList)ViewBag.BloodGroups" class="form-control">
                                <option value="">--Select Blood Group--</option>
                                </select>
                                <span asp-validation-for="BloodGroup" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PatientAddress" class="form-label fw-semibold">Patient Address</label>
                            <textarea asp-for="PatientAddress" class="form-control shadow-sm" rows="2" placeholder="Enter patient address"></textarea>
                            <span asp-validation-for="PatientAddress" class="text-danger small"></span>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="MobileNo" class="form-label fw-semibold">Mobile No</label>
                                <input asp-for="MobileNo" class="form-control shadow-sm" placeholder="Enter Mobile No" />
                                <span asp-validation-for="MobileNo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DiseaseName" class="form-label fw-semibold">Disease Name</label>
                                <input asp-for="DiseaseName" class="form-control shadow-sm" placeholder="Enter Disease Name" />
                                <span asp-validation-for="DiseaseName" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="HospitalName" class="form-label fw-semibold">Hospital Name</label>
                            <input asp-for="HospitalName" class="form-control shadow-sm" readonly />
                             <input type="hidden" asp-for="HospitalId" />
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="button" class="btn btn-success px-4 shadow-sm" btn-success" id="btnSavePatient">
                                <i class="bi bi-save2-fill me-1"></i> Save Patient
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
 {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   <script>
        $(document).ready(function () 
        {
            $("#btnSavePatient").click(function () 
            {
                if ($("form").valid()) 
                { //check client-side validation
                    var form = $("form");
                    $.ajax
                    ({
                        url: form.attr("action"),
                        type: form.attr("method"),
                        data: form.serialize(),
                        success: function (response) 
                        {
                                console.log("DEBUG: Raw response from server:", response);
                                if (response.success) 
                                {
                                    var patientId = response.patientId;
                                    console.log("DEBUG: Sending patientId to parent:", patientId);
                                    window.parent.postMessage({type: "PatientSaved", patientId: response.patientId},"*");
                                }
                                else 
                                {
                                    console.error("Patient save failed or missing patientId!");
                                }
                        }, 
                        error: function () 
                        {
                            alert("An error occurred while saving patient details.");
                        }
                    });
                }
            });
        });
   </script> 
 }
