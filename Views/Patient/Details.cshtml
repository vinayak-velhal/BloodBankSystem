@model BloodBankManagementSystem.Models.PatientRecord

@{
    ViewData["Title"] = "Patient Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i>Patient Details</h4>
                </div>

                <div class="card-body px-5 py-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-secondary">Patient Id</dt>
                        <dd class="col-sm-8">@Model.PatientId</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Patient Name</dt>
                        <dd class="col-sm-8 text-primary fw-semibold">@Model.PatientName</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Patient Address</dt>
                        <dd class="col-sm-8">@Model.PatientAddress</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Mobile No</dt>
                        <dd class="col-sm-8">@Model.MobileNo</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Blood Group</dt>
                        <dd class="col-sm-8">@Model.BloodGroup</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Disease Name</dt>
                        <dd class="col-sm-8">@Model.DiseaseName</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Hospital Name</dt>
                        <dd class="col-sm-8">@Model.HospitalName</dd>
                    </dl>
                </div>

                <div class="card-footer bg-light text-end rounded-bottom-4 py-3 px-4">
                    <a asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-warning text-dark me-2 shadow-sm">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>



