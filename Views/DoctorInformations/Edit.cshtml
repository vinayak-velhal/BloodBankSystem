@model BloodBankManagementSystem.Models.DoctorInformation

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark text-center py-3 rounded-top-4">
                    <h4 class="mb-0 fw-semibold"><i class="bi bi-pencil-square me-2"></i>Edit Doctor Information</h4>
                </div>
                <div class="card-body px-5 py-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="DoctorId" />
                        <div class="mb-3">
                            <label asp-for="DoctorName" class="form-label fw-semibold">Doctor Name</label>
                            <input asp-for="DoctorName" class="form-control shadow-sm" placeholder="Enter doctor name" />
                            <span asp-validation-for="DoctorName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="MobileNo" class="form-label fw-semibold">Mobile No</label>
                            <input asp-for="MobileNo" class="form-control shadow-sm" placeholder="Enter mobile no" />
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DoctorAddress" class="form-label fw-semibold">Doctor Address</label>
                            <textarea asp-for="DoctorAddress" class="form-control shadow-sm" rows="2" placeholder="Enter doctor address"></textarea>
                            <span asp-validation-for="DoctorAddress" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="Qualification" class="form-label fw-semibold">Qualification</label>
                                <input asp-for="Qualification" class="form-control shadow-sm" placeholder="Enter qualification" />
                                <span asp-validation-for="Qualification" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EmailId" class="form-label fw-semibold">EmailId</label>
                                <input asp-for="EmailId" class="form-control shadow-sm" placeholder="Enter email id" />
                                <span asp-validation-for="EmailId" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning text-dark px-4 shadow-sm">
                                <i class="bi bi-save2-fill me-1"></i> Update Doctor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
