@model BloodBankManagementSystem.Models.BloodInventory

@{
    ViewData["Title"] = "Delete Blood Unit";
}

<div class="delete-wrapper container mt-5">
    <div class="delete-card shadow-lg border-0 rounded-4 overflow-hidden">

        <!-- HEADER -->
        <div class="delete-header text-white py-3 px-4">
            <h3 class="mb-0">Delete Blood Unit</h3>
        </div>

        <!-- BODY -->
        <div class="delete-body p-4">

            <!-- Warning Box -->
            <div class="warning-box mb-4">
                ⚠️ Are you sure you want to permanently delete this blood inventory record?
            </div>

            <!-- Details -->
            <div class="details-section p-3 rounded-3 mb-4">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Blood Group</dt>
                    <dd class="col-sm-8">@Model.BloodGroup</dd>

                    <dt class="col-sm-4">Quantity (ml)</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>

                    <dt class="col-sm-4">Collection Date</dt>
                    <dd class="col-sm-8">@Model.CollectionDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Expiry Date</dt>
                    <dd class="col-sm-8">@Model.ExpiryDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge
                            @(Model.Status == "Available" ? "bg-success" :
                              Model.Status == "Issued" ? "bg-warning text-dark" : "bg-danger")">
                            @Model.Status
                        </span>
                    </dd>
                </dl>
            </div>

            <!-- Buttons -->
            <form asp-action="Delete" method="post" class="text-center mt-3">
                <input type="hidden" asp-for="InventoryId" />

                <button type="submit" class="btn btn-danger px-4 me-2 shadow-sm rounded-pill fw-bold">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>

                <a asp-action="Index" class="btn btn-secondary px-4 shadow-sm rounded-pill">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </form>

        </div>
    </div>
</div>
