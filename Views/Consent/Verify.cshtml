@model BloodBankManagementSystem.Models.Consent

@{
    ViewBag.Title = "Verify Consent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock-fill me-2"></i> Verify Donor Consent
                    </h4>
                </div>

                <div class="card-body px-5 py-4 bg-light">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info text-center shadow-sm mb-4 rounded-3">
                            <i class="bi bi-info-circle me-1"></i>@TempData["Message"]
                        </div>
                    }

                    <form asp-action="Verify" method="post" class="needs-validation" novalidate>
                         @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)

                        <div class="mb-4">
                            <label class="form-label fw-semibold text-secondary"><i class="bi bi-key-fill me-2"></i>Enter OTP</label>
                            <input type="text" name="enteredOtp" class="form-control form-control-lg text-center shadow-sm rounded-3" maxlength="6" placeholder="Enter 6-digit OTP" required />
                            @if (ViewBag.Error != null)
                            {
                                <span class="text-danger d-block mt-2 fw-semibold">@ViewBag.Error</span>
                            }
                        </div>

                        <div class="text-center mb-3">
                            <p class="text-muted mb-1">Didn’t get the OTP?</p>
                            <a asp-action="ResendOtp" asp-route-id="@Model.Id" class="fw-semibold text-decoration-none text-primary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Resend OTP
                            </a>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-controller="Donor" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back to Donors
                             </a>
                            <button type="submit" class="btn btn-success px-4 shadow-sm">
                                <i class="bi bi-check-circle-fill me-1"></i> Verify OTP
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Footer -->
                <div class="card-footer text-center text-muted small bg-white rounded-bottom-4 py-2">
                    <i class="bi bi-shield-check text-primary me-1"></i>
                    Secure verification ensures authenticity of donor consent.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
