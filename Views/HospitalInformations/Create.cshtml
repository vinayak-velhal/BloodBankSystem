@model BloodBankManagementSystem.Models.HospitalInformation
@{
    ViewData["Title"] = "Add New Hospital";
}

<div class="container mt-1 mb-1">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-hospital-fill me-2"></i>Add New Hospital</h4>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="HospitalName" class="form-label fw-semibold">Hospital Name</label>
                            <input asp-for="HospitalName" class="form-control shadow-sm" placeholder="Enter hospital name" />
                            <span asp-validation-for="HospitalName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HospitalAddress" class="form-label fw-semibold">Hospital Address</label>
                            <textarea asp-for="HospitalAddress" class="form-control shadow-sm" rows="2" placeholder="Enter hospital address"></textarea>
                            <span asp-validation-for="HospitalAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DoctorName" class="form-label fw-semibold">Doctor Name</label>
                            <input asp-for="DoctorName" class="form-control shadow-sm" placeholder="Enter doctor name" />
                            <span asp-validation-for="DoctorName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="HospitalContact" class="form-label fw-semibold">Hospital Contact</label>
                                <input asp-for="HospitalContact" class="form-control shadow-sm" placeholder="Enter hospital contact" />
                                <span asp-validation-for="HospitalContact" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PersonContact" class="form-label fw-semibold">Person Contact</label>
                                <input asp-for="PersonContact" class="form-control shadow-sm" maxlength="10" placeholder="Enter person contact" />
                                <span asp-validation-for="PersonContact" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-success px-4 shadow-sm">
                                <i class="bi bi-save2-fill me-1"></i> Save Hospital
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
    }
    <script>
        // Run this after the form is successfully submitted and response received
        document.querySelector("form").addEventListener("submit", function (e) {
            e.preventDefault(); // Stop normal form submission

            var form = this;
            var formData = new FormData(form);

            fetch(form.action, {
                method: "POST",
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) 
                    {
                        // ✅ Notify parent with actual saved hospitalId from controller response
                        window.parent.postMessage({ type: "HospitalSaved", hospitalId: data.hospitalId }, "*");
                    } else {
                        alert("Error saving hospital");
                    }
                })
                .catch(err => console.error("Error:", err));
        });
    </script>
}
