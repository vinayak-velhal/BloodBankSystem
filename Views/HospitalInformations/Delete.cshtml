@model BloodBankManagementSystem.Models.HospitalInformation
@{
    ViewData["Title"] = "Delete Hospital";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i> Confirm Delete</h4>
                </div>

                <div class="card-body px-5 py-4">

                    <p class="text-center fs-5 text-danger mb-4">
                        Are you sure you want to delete this Hospital?
                    </p>

                    <div class="border rounded-4 p-4 bg-light shadow-sm mb-4">

                        <h5 class="text-primary fw-bold mb-3">
                            <i class="bi bi-hospital me-2"></i>Hospital Information
                        </h5>

                        <dl class="row mb-0">
                            <dt class="col-sm-4 fw-semibold">Hospital Name</dt>
                            <dd class="col-sm-8">@Model.HospitalName</dd>

                            <dt class="col-sm-4 fw-semibold">Address</dt>
                            <dd class="col-sm-8">@Model.HospitalAddress</dd>

                            <dt class="col-sm-4 fw-semibold">Doctor Name</dt>
                            <dd class="col-sm-8">@Model.DoctorName</dd>

                            <dt class="col-sm-4 fw-semibold">Hospital Contact</dt>
                            <dd class="col-sm-8">@Model.HospitalContact</dd>

                            <dt class="col-sm-4 fw-semibold">Person Contact</dt>
                            <dd class="col-sm-8">@Model.PersonContact</dd>
                        </dl>

                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="HospitalId" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                            </a>

                            <button type="submit" class="btn btn-danger px-4 shadow-sm">
                                <i class="bi bi-trash3-fill me-1"></i> Delete
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
