@model BloodBankManagementSystem.Models.HospitalInformation

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark text-center py-3 rounded-top-4">
                    <h4 class="mb-0 fw-semibold"><i class="bi bi-pencil-square me-2"></i>Edit Hospital Information</h4>
                </div>
                <div class="card-body px-5 py-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="HospitalId" />
                        <div class="mb-3">
                            <label asp-for="HospitalName" class="form-label fw-semibold">Hospital Name</label>
                            <input asp-for="HospitalName" class="form-control shadow-sm" placeholder="Enter hospital name" />
                            <span asp-validation-for="HospitalName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="HospitalAddress" class="form-label fw-semibold">Hospital Address</label>
                            <textarea asp-for="HospitalAddress" class="form-control shadow-sm" rows="2" placeholder="Enter hospital address"></textarea>
                            <span asp-validation-for="HospitalAddress" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DoctorName" class="form-label fw-semibold">Doctor Name</label>
                            <input asp-for="DoctorName" class="form-control shadow-sm" placeholder="Enter doctor name" />
                            <span asp-validation-for="DoctorName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="HospitalContact" class="form-label fw-semibold">Hospital Contact</label>
                                <input asp-for="HospitalContact" class="form-control shadow-sm" placeholder="Enter hospital contact" />
                                <span asp-validation-for="HospitalContact" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PersonContact" class="form-label fw-semibold">Person Contact</label>
                                <input asp-for="PersonContact" class="form-control shadow-sm" maxlength="10" placeholder="Enter person contact" />
                                <span asp-validation-for="PersonContact" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning text-dark px-4 shadow-sm">
                                <i class="bi bi-save2-fill me-1"></i> Update Hospital
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
