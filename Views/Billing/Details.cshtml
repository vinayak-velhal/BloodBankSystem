@model BloodBankManagementSystem.Models.Billing
@{
    ViewData["Title"] = "Bill Details";
}
<div class="bill-container">
    <div class="bill-content">
        <div class="bill-header"><h2>Blood Bank System</h2><p class="m-0">M.G.Road Kolhapur</p></div>
        <hr class="mt-3 mb-3" />
        <div class="row row-cols-2 d-flex justify-content-between position-relative flex-wrap">
            <div class="col-auto"><p class="mb-1"><strong class="pe-1">Bill ID:</strong>@Model.BillId</p></div>   
            <div class="col-auto"><p class="mb-1"><strong class="pe-1">Hospital Name:</strong>@Model.HospitalName</p></div>
            <div class="col"><p class="mb-1"><strong class="pe-1">Date:</strong>@Model.BillDate.ToString("dd/MM/yyyy")</p></div>
        </div>
        <hr class="mt-3 mb-3" />
        <div class="bill-details">
            <div class="row row-cols-2">
                <div class="col-12"><p><strong class="pe-2">Patient Name:</strong>@Model.BloodRequest?.PatientName</p></div>
                <div class="col"><p><strong class="pe-1">Blood Group:</strong>@Model.BloodGroup</p></div>
                <div class="col"><p><strong class="pe-1">Quantity (in ml):</strong>@Model.Quantity</p></div>
                <div class="col"><p><strong class="pe-1">Rate/ml (₹):</strong>@Model.RatePerMl</p></div>
                <div class="col"><p><strong class="pe-1">Total (₹):</strong><b class="text-success">@Model.TotalAmount</b></p></div>
            </div>
        </div>
        <div class="payment-info">
             <p><strong class="pe-1">Patient Mode:</strong>@Model.PaymentMode</p>
            <p class="mb-0"><strong class="pe-1">Transaction ID:</strong>@Model.TransactionNo</p>
        </div>
        <div class="signature">
            <p style="margin-bottom:30px;"><strong>Authorized Signature</strong></p>
            <p>_____________________________</p>
        </div>
        <div class="text-center mt-2 position-relative">
            <button id="bill-button" class="btn btn-danger px-4 me-2" onclick="window.print()"><img src="~/icons/printer.png" width="18" height="18" class="me-1" /> Print</button>
            <a id="anchor-button" asp-action="Index" class="btn btn-secondary px-3"><i class="bi bi-arrow-left-circle me-1"></i> Back to List</a>
        </div>
        <div class="footer bill-footer mb-0">
            <p>We appreciate the opportunity to serve you.</p>
        </div>
    </div>
</div>


<style>
    
    body{
        font-family: 'Segoe UI',Arial,sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 0;
    }
    @@media print{
        body * {
            visibility: hidden;
        }
        .bill-container,.bill-container * {
            visibility: visible;
        }
        .bill-container{
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            box-shadow: none !important;
            border: none !important;
        }
        #bill-button,#anchor-button{
            display: none !important;
        }
        hr{
            border-color: #000 !important;
        }
    }

</style>









