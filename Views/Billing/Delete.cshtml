@model BloodBankManagementSystem.Models.Billing
@{
    ViewData["Title"] = "Delete Billing Record";
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-trash3-fill me-2"></i> Confirm Delete
            </h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-semibold">
                Are you sure you want to delete this billing record?
            </p>

            <div class="table-responsive mb-3">
                <table class="table table-bordered table-striped shadow-sm">
                    <tr><th>Bill ID</th><td>@Model.BillId</td></tr>
                    <tr><th>Patient Name</th><td>@Model.BloodRequest?.PatientName</td></tr>
                    <tr><th>Blood Group</th><td>@Model.BloodGroup</td></tr>
                    <tr><th>Quantity</th><td>@Model.Quantity ml</td></tr>
                    <tr><th>Total Amount</th><td><strong>₹@Model.TotalAmount</strong></td></tr>
                    <tr><th>Payment Mode</th><td>@Model.PaymentMode</td></tr>
                    <tr><th>Bill Date</th><td>@Model.BillDate.ToString("dd-MM-yyyy")</td></tr>
                </table>
            </div>

            <form asp-action="Delete" class="d-flex justify-content-end">
                <input type="hidden" asp-for="BillId" />
                <input type="hidden" asp-for="RequestId" />
                <button type="submit" class="btn btn-danger me-2 shadow-sm">
                    <i class="bi bi-check-circle me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary shadow-sm">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
