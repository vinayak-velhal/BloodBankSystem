@model BloodBankManagementSystem.Models.Billing
@{
    ViewData["Title"] = "Add New Bill";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Add New Bill</h4>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="RequestId" class="form-label fw-semibold">Patient Name</label>
                            @if (Model?.RequestId > 0)
                            {
                                <input type="hidden" asp-for="RequestId" />
                                <input type="text" class="form-control shadow-sm" value="@Model.PatientName" readonly />
                            }
                            else
                            {
                                <select asp-for="RequestId" class="form-select shadow-sm" id="RequestId" required>
                                    <option value="">-- Select Patient Name --</option>
                                    @foreach (var p in (IEnumerable<dynamic>)ViewBag.RequestIssueList)
                                    {
                                        <option value="@p.RequestId">@p.Display</option>
                                    }
                                </select>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="HospitalName" class="form-label fw-semibold"></label>
                            <input asp-for="HospitalName" class="form-control shadow-sm" id="Hospital" readonly />
                        </div>

                        <div class="mb-3">
                             <label asp-for="BloodGroup" class="form-label fw-semibold"></label>
                            <input asp-for="BloodGroup" class="form-control shadow-sm" id="BloodGroup" readonly />
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="Quantity" class="form-label fw-semibold"></label>
                                <input asp-for="Quantity" class="form-control shadow-sm" id="Quantity" readonly />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RatePerMl" class="form-label fw-semibold"></label>
                                <input asp-for="RatePerMl" class="form-control shadow-sm" placeholder="Rate per ml (₹)" />
                                <span asp-validation-for="RatePerMl" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PaymentMode" class="form-label fw-semibold"></label>
                            <select asp-for="PaymentMode" class="form-select shadow-sm">
                                <option value="">-- Select Mode --</option>
                                <option>Cash</option>
                                <option>UPI</option>
                                <option>Card</option>
                            </select>
                            <span asp-validation-for="PaymentMode" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TransactionNo" class="form-label fw-semibold"></label>
                            <input asp-for="TransactionNo" class="form-control shadow-sm" placeholder="Enter transaction/receipt no" />
                            <span asp-validation-for="TransactionNo" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success px-4 shadow-sm" btn-success" id="btnSavePatient">
                                <i class="bi bi-save2-fill me-1"></i> Save Bill
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#RequestId').change(function () {
                var id = $(this).val();
                if (id) {
                    $.ajax({
                        url: '/Billing/GetRequestIssueDetails',
                        type: 'GET',
                        data: { id: id },
                        success: function (res) {
                            if (res.success) {
                                $('#PatientName').val(res.data.patientName);
                                $('#BloodGroup').val(res.data.bloodGroup);
                                $('#Quantity').val(res.data.quantity);
                                $('#Hospital').val(res.data.hospitalName);
                            } else {
                                alert('No data found for this patient.');
                            }
                        },
                        error: function () {
                            alert('Error fetching data.');
                        }
                    });
                }
            });
        });
    </script>
}
